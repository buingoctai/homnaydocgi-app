{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "srcRoot/*": ["src/*"],
      "indexDB/*": ["src/core/databases/indexDB/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
